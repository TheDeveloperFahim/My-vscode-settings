{
  "editor.fontSize": 20,
  "editor.fontFamily": " Operator Mono Lig , Cascadia Code",
  "editor.lineHeight": 38,
  "editor.suggestLineHeight": 50,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.cursorSmoothCaretAnimation": true,
  "powermode.enabled": true,
  "editor.hover.enabled": true,
  "editor.hover.sticky": true,
  "breadcrumbs.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.smoothScrolling": true,
  "powermode.enableShake": false,
  "zenMode.fullScreen": false,
  "editor.fontLigatures": true,
  "terminal.integrated.fontSize": 15,
  "editor.minimap.enabled": false,
  "terminal.integrated.tabs.enabled": false,
  "explorer.confirmDelete": false,
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "bracket-pair-colorizer-2.rulerPosition": "Left",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "emmet.includeLanguages": { "javascript": "javascriptreact" },
  "explorer.confirmDragAndDrop": false,
  "editor.linkedEditing": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.cursorBlinking": "phase",
  "workbench.iconTheme": "material-icon-theme",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.autoSave": "afterDelay",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.tabSize": 2,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorTheme": "Learn with Sumit - Peace of the eye",
  "workbench.colorCustomizations": {
    // Learn with sumit main theme
    // "sideBar.background": "#13131D",
    // "activityBar.background": "#13131D",
    // "titleBar.activeBackground": "#0B0B11",
    // "titleBar.inactiveBackground": "#0B0B11",
    // "statusBar.background": "#0B0B11",

    // for peace of the eay theme
    "editorLineNumber.foreground": "#6DD3C2",
    "editorLineNumber.activeForeground": "#A8DFD8",
    "activityBar.background": "#141D2E",
    "sideBar.background": "#141827",
    "titleBar.activeBackground": "#141828",
    "titleBar.inactiveBackground": "#141828",
    "statusBar.background": "#0d121d"
  },
  "editor.wordWrap": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "terminal.external.linuxExec": ""
}
